@using CabManagementSystems.Models.ViewModel;
@model ApplicationUser
@{
    ViewData["Title"] = "Profile";
}
@*var user = await _userManager.FindByNameAsync(User.Identity.Name);*@
<h1>Profile</h1>
<div class="card col-sm-3 shadow" style="height:35%; width:20%">
    <img src="https://dummyimage.com/500x500/f2f2f2/5e5e5e&text=@Model.FirstName" class="card-img-top" alt="">
    <div class="card-body" >
        <h2>@Model.FirstName</h2>
        <p>@Model.LastName</p>
    </div>
    <div class="card-footer d-flex">
        <div class="btn-group ms-auto">
            <a asp-action="Edit" asp-controller="Home" asp-area="Account" class="btn btn-primary">Edit</a>
            <a asp-action="Delete" asp-controller="Home" asp-area="Account" class="btn btn-danger" onclick="return confirm('Do you want to delete this movie?')">Delete</a>
        </div>
    </div>
</div>

