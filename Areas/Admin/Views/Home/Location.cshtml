@model IEnumerable<Place>
@{
    ViewData["Title"] = "Location";
}

<h1>Locations</h1>

<div class="d-flex">
    <a asp-action="CreateLocation" class="btn btn-success ms-auto my-2">+ Add a route</a>
</div>

<div class="container-fluid">
    @if (Model.Any())
    {
        <div class="row gap-5">
            
                <table class="table table-striped">
                    <tr>
                        <th>From</th>
                        <th>To</th>
                        <th>Distance</th>
                        <th>Delete</th>
                    </tr>
                    @foreach (var movie in Model)
                    {
                        <tr>
                            <td>@movie.From</td>
                            <td>@movie.To</td>
                            <td>@movie.Distance</td>
                            <td>
                                <a asp-action="DeleteLocation" asp-route-id="@movie.Id" class="btn btn-danger" onclick="return confirm('Do you want to delete this movie?')">Delete</a>
                            </td>
                        </tr>
                    }
                </table>
            
        </div>
    }
    else
    {
        <div class="alert alert-info">
            No routes were found. Please
            <a asp-action="CreateLocation" class="alert-link">Add a Route</a> first.
        </div>
    }
</div>


