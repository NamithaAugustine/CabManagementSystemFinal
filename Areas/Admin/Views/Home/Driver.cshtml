@model IEnumerable<DriverDetails>
@{
    ViewData["Title"] = "Driver";
}

<h1>Driver Details</h1>
<div class="container-fluid">
    @if (Model.Any())
    {
        <div class="row gap-5">
            @foreach (var item in Model)
            {
                <div class="card col-sm-3 shadow" style="height:35%; width:20%">
                    <img src="https://dummyimage.com/500x500/f2f2f2/5e5e5e&text=@item.Car" class="card-img-top" alt="">
                    <div class="card-body">
                        <h2>@item.CarName</h2>
                        <p>@item.CarNumber</p>
                    </div>
                    <div class="card-footer d-flex">
                        <div class="btn-group ms-auto">
                            <a asp-action="DriverEdit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                            <a asp-action="DriverDelete" asp-route-id="@item.Id" class="btn btn-danger" onclick="return confirm('Do you want to delete this movie?')">Delete</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
